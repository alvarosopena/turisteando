    <div class="mySlides fade">
      <div class="numbertext">1 / 4</div>
      <img src="/images/pano1.jpg" style="width:100%">
      <div class="text">Mendoza</div>
    </div>

    <div class="mySlides fade">
      <div class="numbertext">2 / 4</div>
      <img src="/images/pano4.jpg" style="width:100%">
      <div class="text">Buenos Aires</div>
    </div>

    <div class="mySlides fade">
      <div class="numbertext">3 / 4</div>
      <img src="/images/pano5.jpg" style="width:100%">
      <div class="text">Norte</div>
    </div>

    <div class="mySlides fade">
